{
  "name": "bunserve",
  "version": "0.0.1-beta.1",
  "description": "Express-like typesafe routing library for Bun.serve",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --target=bun --format=esm --splitting && tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun run --hot src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "lint": "biome format . && biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun test && bun run build"
  },
  "keywords": [
    "bun",
    "http",
    "server",
    "routing",
    "express",
    "typescript",
    "typesafe",
    "middleware",
    "router",
    "web-framework",
    "cors",
    "error-handler"
  ],
  "author": "Sameer Khan <hi@monkfrom.earth>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/monkfromearth/bunserve.git"
  },
  "homepage": "https://github.com/monkfromearth/bunserve#readme",
  "bugs": {
    "url": "https://github.com/monkfromearth/bunserve/issues"
  },
  "dependencies": {
    "@theinternetfolks/context": "^2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/bun": "^1.0.0",
    "@types/express": "^5.0.5",
    "elysia": "^1.4.16",
    "express": "^5.1.0",
    "hono": "^4.10.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}